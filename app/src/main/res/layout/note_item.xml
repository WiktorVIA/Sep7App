<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="#9f9f9f">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:padding="8dp">

        <Button
            android:id="@+id/gel_button"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_gel"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"


            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/battery_button"
            android:text="Refill"
            android:textSize="40px" />

        <TextView
            android:id="@+id/text_view_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_below="@+id/text_view_battery_percent"
            android:layout_marginStart="113dp"


            android:layout_marginEnd="83dp"
            android:layout_toStartOf="@+id/text_view_gel"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_battery_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginStart="113dp"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/text_view_gel_pump_percent"
            android:text="Battery %"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <!-- android:layout_toStartOf="@id/text_view_priority" -->


        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:layout_alignParentStart="true"
            android:text="Description"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/text_view_gel_pump_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:text="Gel pumps left:"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_gel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_gel_pump_percent"


            android:layout_alignParentEnd="true"


            android:layout_marginEnd="43dp"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/battery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_battery"
            android:layout_alignParentStart="true"
            android:layout_marginStart="156dp"
            android:layout_marginTop="-3dp"
            android:text="Change"
            android:textSize="40px" />
        <!--android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" -->


    </RelativeLayout>

</androidx.cardview.widget.CardView>